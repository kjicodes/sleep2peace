<%- include('../partials/header') %>

    <div>
        <h2>Add Sleep Cycle</h2>
        <form action="/sleeps" method="POST">
            <label>Date:
                <input type="date" name="date">
            </label><br>
            <label>Hours Slept:
                <input type="number" name="hoursSlept">
            </label><br>
            <label>Energy Levels
                <select name="energyLevels">
                    <option value="Refreshed!">Refreshed!</option>
                    <option value="Well rested">Well rested</option>
                    <option value="Good enough">Good enough</option>
                    <option value="A bit tired">A bit tired</option>
                    <option value="Not enough sleep.">Not enough sleep</option>
                </select>
            </label><br>
            <label>Did you wake up in the middle of the night?
                <input type="checkbox" name="wokeUp">
            </label><br>
            <label>Did you grab a snack when you woke up?
                <input type="checkbox" name="ateFood">
            </label>
            <br>
            <br>
            <input type="submit" value="Submit">
        </form>
    </div>
    
    <%- include('../partials/footer') %>